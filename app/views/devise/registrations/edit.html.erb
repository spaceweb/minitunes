<div class="row">
  <div class="span4">

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, class: "well"}) do |f| %>
  <%= f.error_notification %>

  <fieldset>
  <legend>Edit <%= resource_name.to_s.humanize %></legend> 
  <div class="form-inputs">
    <%= f.input :email %>
    <%= f.input :password %> <i>(blank if you don't want to change it)</i><br /><br />
    <%= f.input :password_confirmation %>
    <%= f.input :current_password %><i>(we need your current password)</i><br /><br />
    <%= f.button :submit, "Update", :class => "btn btn-warning" %>
  </div>

  </fieldset>
  <% end %>

  <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>
<%= link_to "Back", :back %>

