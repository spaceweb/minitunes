<div class="row">
  <div class="span4">

  <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: "well" }) do |f| %>
    <fieldset>
    <legend>Forgot your password?</legend> 
    <%= f.error_notification %>

    <%= f.input :email %>

    <div><%= f.button :submit, "Send me reset password instructions", :class => "btn btn-primary" %></div>
    </fieldset>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
</div>