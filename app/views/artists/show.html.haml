-#  This file is app/views/index/index.html.haml

.page-header
  %h1= @artist.name

.row
  .span3
    = link_to image_tag(@artist_image)
    %br
    %br
    = render 'user_artist_form'

    %h3 Description
    %p#description= @artist.description

  .span6
    %h3 Albums
    -if @albums.length > 0
      %table#albums
        %tbody
          - @albums.each_with_index do |album, i|
            - name_album = album.name.gsub('.','#').gsub('/','$')
            %tr
              %td= "#{i+1}."
              %td= link_to album.name, artist_album_path(@artist.name, name_album)

  .span3
    %div{:class=>"well sidebar-nav"}
      = render 'similar'

= render 'show_reviews'

= render 'artist_review_form'
