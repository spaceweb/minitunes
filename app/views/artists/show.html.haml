-#  This file is app/views/index/index.html.haml

.page-header
  %h1= @artist.name

.row
  .span3
    -if @artist.name
      -if @add
        = form_tag destroy_artist_path, method: :delete do |form| 
          = hidden_field_tag(:id, @artist.id)
          = submit_tag "Remove Artist", class: 'btn btn-primary', :confirm => 'Are you sure?'
      -else
        = form_tag add_artist_path, method: :post do |form|
          = hidden_field_tag(:id, @artist.id)
          = submit_tag "Add Artist", class: 'btn btn-primary'

    %h3 Description
    %p#description= @artist.description
     
  .span6      
    %h3 Albums
    -if @albums.length > 0
      - @albums.each do |album|
        ="#{album.tracks}." 
        = link_to album.name
        %br
    
  .span3
    %div{:class=>"well sidebar-nav"}
      = render 'similar'
  
       
      

.page-header
  %h3 Comments (#{@num_reviews})


- @reviews.each do |review|
  #review_user= review.user.name
  %pre
    = review.comments
= render 'artist_review_form'
  
  
